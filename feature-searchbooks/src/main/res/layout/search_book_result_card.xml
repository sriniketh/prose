<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/search_result_image"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginRight="12dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/image_rounded_corner" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/search_result_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:maxLines="2"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/search_result_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Book Title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/search_result_book_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:maxLines="2"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintLeft_toRightOf="@id/search_result_image"
        app:layout_constraintTop_toBottomOf="@id/search_result_book_title"
        tools:text="book subtitle" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/search_result_book_authors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:maxLines="2"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintLeft_toRightOf="@id/search_result_image"
        app:layout_constraintTop_toBottomOf="@id/search_result_book_subtitle"
        tools:text="authors" />

</androidx.constraintlayout.widget.ConstraintLayout>